@model QLBRUOU.Models.XUATXU

@{
    ViewBag.Title = "themmoixuatxu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Themmoinxx", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal row">
        <h3>THÊM MỚI NHÀ XUẤT XỨ</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-2 col-lg-2"></div>
        <div class="form-group col-md-8 col-lg-8">
            @Html.LabelFor(model => model.TenXXu, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenXXu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenXXu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="clearfix"></div>
  
        <div class="col-md-2 col-lg-2"></div>
        <div class="form-group col-md-8 col-lg-8">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
    </div>

}
<div>
    @Html.ActionLink("Trở về danh sách", "Nhaxuatxu")
</div>



