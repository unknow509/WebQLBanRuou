@model QLBRUOU.Models.NHACUNGCAP

@{
    ViewBag.Title = "themmoiruou";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Themmoincc", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal row">
        <h3>THÊM MỚI NHÀ CUNG CẤP</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-2 col-lg-2"></div>
        <div class="form-group col-md-8 col-lg-8">
            @Html.LabelFor(model => model.TenNCC, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="clearfix"></div>
        <div class="col-md-2 col-lg-2"></div>
        <div class="form-group col-md-8 col-lg-8">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="clearfix"></div>  
        <div class="col-md-2 col-lg-2"></div>
        <div class="form-group col-md-8 col-lg-8">
            @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "control-label col-md-2 col-lg-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div> 
        <div class="clearfix"></div>

        <div class="col-md-2 col-lg-2"></div>
        <div class="form-group col-md-8 col-lg-8">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-default" />
            </div>
        </div>
     </div>   

}
<div>
    @Html.ActionLink("Trở về danh sách", "Nhacungcap")
</div>

