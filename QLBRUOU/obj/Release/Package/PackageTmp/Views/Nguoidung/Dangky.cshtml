@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 style="text-align: center">ĐĂNG KÝ THÀNH VIÊN</h2>

<table style="width: 100%; margin: auto">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td style="text-align: right">Họ tên khách hàng: </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Mật khẩu: </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Nhập lại mật khẩu: </td>
            <td>
                @Html.Password("MatkhauNhaplai")
                @ViewData["loi4"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Địa chỉ: </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Email: </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Điện thoại: </td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height: 40px">
            <td style="text-align: right">Ngày sinh: </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>

